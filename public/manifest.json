  "share_target": {
    "action": "/dashboard?share=true",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+bookaimark",
      "url": "/dashboard?bookmark=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/dashboard?import=true",
      "accept": {
        "text/html": [".html", ".htm"],
        "application/json": [".json"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
